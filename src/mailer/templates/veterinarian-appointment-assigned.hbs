    }
    
    .detail-label {
      font-weight: 600;
      color: #92400e;
      min-width: 120px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .detail-value {
      color: #78350f;
      flex: 1;
    }
    
    .pet-info {
      background: white;
      border-radius: 12px;
      padding: 20px;
      margin: 20px 0;
      border: 2px solid #fbbf24;
    }
    
    .pet-header {
      font-size: 18px;
      color: #f97316;
      margin-bottom: 15px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .status-badge {
      display: inline-block;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 600;
      background: #dcfce7;
      color: #166534;
    }
    
    .notes-section {
      background: #fffbeb;
      border-left: 4px solid #fbbf24;
      padding: 20px;
      margin: 25px 0;
      border-radius: 8px;
    }
    
    .notes-title {
      font-weight: 600;
      color: #92400e;
      margin-bottom: 10px;
      font-size: 16px;
    }
    
    .notes-content {
      color: #78350f;
      line-height: 1.6;
    }
    
    .action-buttons {
      display: flex;
      gap: 15px;
      margin: 30px 0;
      flex-wrap: wrap;
    }
    
    .btn {
      display: inline-block;
      padding: 14px 28px;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
      font-size: 15px;
      text-align: center;
      flex: 1;
      min-width: 150px;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(251, 146, 60, 0.3);
    }
    
    .btn-secondary {
      background: white;
      color: #f97316;
      border: 2px solid #f97316;
    }
    
    .paw-divider {
      text-align: center;
      font-size: 24px;
      margin: 30px 0;
      color: #fbbf24;
    }
    
    .footer {
      background: #fef3c7;
      padding: 30px;
      text-align: center;
      border-top: 3px solid #fbbf24;
    }
    
    .footer p {
      color: #92400e;
      margin: 8px 0;
      font-size: 14px;
    }
    
    .footer-icon {
      font-size: 30px;
      margin-bottom: 10px;
    }
    
    @media (max-width: 600px) {
      .container {
        border-radius: 0;
      }
      
      .header, .content, .footer {
        padding: 25px 20px;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .btn {
        width: 100%;
      }
      
      .detail-row {
        flex-direction: column;
        gap: 5px;
      }
      
      .detail-label {
        min-width: auto;
      }
    }
  </style>
</head>
