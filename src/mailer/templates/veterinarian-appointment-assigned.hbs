      padding: 25px;
      margin: 25px 0;
      border-left: 5px solid #f97316;
    }
    
    .appointment-title {
      font-size: 20px;
      color: #92400e;
      margin-bottom: 20px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .detail-row {
      display: flex;
      padding: 12px 0;
      border-bottom: 1px solid rgba(251, 146, 60, 0.2);
    }
    
    .detail-row:last-child {
